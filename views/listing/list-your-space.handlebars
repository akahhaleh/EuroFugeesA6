<!doctype html>
<html>
<head>
  {{> globalHead}}
</head>
<body id="list-your-space">
  <div id="layout">
    {{> globalNavigation}}
    <div id="main">
      <div class="header">
        <h2>List Your Space</h2>
      </div>
      <div class="content">
        <h1 class="center-text">Welcome</h1>
        <h3 class="center-text">List a Residence</h3>
        <button id="entireHomeBtn"class="pure-button pure-button-primary is-full-width is-centered"><span class="fa fa-home"></span> Entire Home <span class="fa fa-angle-double-down"></span></button>
        <div id="entireHomePanel">
          <!--form id="entireHome" role="form" method="get" action="JavaScript:handleClick()"-->
          <form id="entireHomeForm" name="entireHomeForm" role="form" method="get" onsubmit="return onsubmitform();" class="pure-form pure-form-stacked">
            <fieldset>
              <legend><span class="fa fa-info-circle"></span> Complete this form to list an <strong>entire residence</strong> for rent to refugees in need.</legend>
              <!-- city -->
              <label><span class="fa fa-map-marker"></span> City/Municipality</label>
              <input type="text" class="form-control" name="city" placeholder="City of listed residence">
              <!-- bed and bath -->
              <label><span class="fa fa-hotel"></span> Bed &amp; Bath</label>
              <div class="pure-g">
                <div class="pure-u-3-5">
                  <p># Bed</p>
                </div>
                <div class="pure-u-2-5">
                  <input name="bed" id="placeBed" type="number" min="1" max="9" placeholder="Bed" required>
                </div>
              </div>
              <div class="pure-g">
                <div class="pure-u-3-5">
                  <p># Bath</p>
                </div>
                <div class="pure-u-2-5">
                  <input name="bath" id="placeBath" type="number" min="0" max="9"placeholder="Bath" required>
                </div>
              </div>
              <!-- max occupants -->
              <label><span class="fa fa-users"></span> Max Guests/Sublets</label>
              <div class="pure-g">
                <div class="pure-u-3-5">
                  <p>Maximum Guests</p>
                </div>
                <div class="pure-u-2-5">
                  <input name="occupants" id="placeBed" type="number" min="1" max="19" placeholder="Max" required>
                </div>
              </div>
              <!-- form submit -->
              <button type="submit" class="pure-button pure-button-red is-full-width is-centered">Next <span class="fa fa-angle-right"></span></button>
            </fieldset>
          </form>
        </div>
        <button id="privateRoomBtn"class="pure-button pure-button-primary is-full-width is-centered"><span class="fa fa-hotel"></span> Single Room <span class="fa fa-angle-double-down"></span></button>
        <div id="privateRoomPanel">
          <form id="privateRoomForm" name="privateRoomForm" role="form" method="get" onsubmit="return onsubmitform()" class="pure-form pure-form-stacked">
            <fieldset>
              <legend><span class="fa fa-info-circle"></span> Complete this form to list an <strong>single room</strong> for rent to refugees in need.</legend>
              <!-- city -->
              <label><span class="fa fa-map-marker"></span> City/Municipality</label>
              <input type="text" class="form-control" name="city" placeholder="City of listed residence">
              <!-- bath -->
              <label><span class="fa fa-hotel"></span> # of Bathrooms</label>
              <div class="pure-g">
                <div class="pure-u-3-5">
                  <p># Bath</p>
                </div>
                <div class="pure-u-2-5">
                  <input name="bath" id="placeBath" type="number" min="0" max="9"placeholder="Bath" required>
                </div>
              </div>
              <!-- max occupants -->
              <label><span class="fa fa-users"></span> Max Guests/Sublets</label>
              <div class="pure-g">
                <div class="pure-u-3-5">
                  <p>Maximum Guests</p>
                </div>
                <div class="pure-u-2-5">
                  <input name="occupants" id="placeBed" type="number" min="1" max="19" placeholder="Max" required>
                </div>
              </div>
            </fieldset>
            <!-- form submit -->
            <button type="submit" class="pure-button pure-button-red is-full-width is-centered">Next <span class="fa fa-angle-right"></span></button>
          </form>
        </div>
        <p>OR</p>
        <a class="pure-button is-full-width is-centered" href="/login">Sign Up / Sign In <span class="fa fa-sign-in"></span></a>
        <a class="pure-button is-full-width is-centered" href="/">Cancel</a>
      </div>
    </div>
  </div>
  <!-- end main content -->
  {{> globalBottomScripts}}
  {{> googleAnalytics}}
  <script src="/js/listYourSpace.js"></script>
</body></html>