<!doctype html>
<html>
<head>
  {{> globalHead}}
</head>
<body id="search">
  <div id="layout">
    {{> globalNavigation}}
    <div id="main">
      <header class="header">
        <h3>Results</h3>
      </header>
      <div class="content">
        <!-- button to refine search -->
        <button id="refineSearch" class="pure-button is-full-width center-text">Refine Search</button>
        <!-- hidden operations -->
        <div id="fadedPanel">
          <form id="refine-form" role="form" method="get" class="pure-form pure-form-stacked">
            <fieldset>
              <!-- city -->
              <label><span class="fa fa-map-marker"></span> Destination</label>
              <input type="text" id="refine-city" name="refine-city" value="{{searchQuery.city}}">
              <!-- occupants -->
              <label><span class="fa fa-users"></span> Occupants</label>
              <div class="pure-g">
                <div class="pure-u-3-5">
                  <p># of Refugees</p>
                </div>
                <div class="pure-u-2-5">
                  <input type="number" id="refine-occupants" min="1" max="19" name="refine-occupants" value="{{searchQuery.occupants}}">
                </div>
              </div>
              <!-- price limit -->
              <label><span class="fa fa-money"></span> Rent Limit / Month</label>
              <div class="pure-g">
                <div class="pure-u-2-5 eurofix"><span class="fa fa-euro"></span> In Euros</div>
                <div class="pure-u-3-5">
                  <input type="number" id = "refine-cost" min="10" max="10000" name="refine-cost" value="{{searchQuery.cost}}" >
                </div>
              </div>
              <!-- other options -->
              <label><span class="fa fa-tasks"></span> Other options</label>
              <div class="refine-extra-options">
                <div class="pure-g">
                  <div class="pure-u-3-4">Pet-Friendly</div>
                  <div class="pure-u-1-4">
                    <input type="checkbox" name="refine-pets" value="undefined" onclick="$(this).attr('value', this.checked ? 'true' : 'false')">
                  </div>
                </div>
                <div class="pure-g">
                  <div class="pure-u-3-4">Children-Friendly</div>
                  <div class="pure-u-1-4">
                    <input type="checkbox" name="refine-children" value="undefined"onclick="$(this).attr('value', this.checked ? 'true' : 'false')">
                  </div>
                </div>
                <div class="pure-g">
                  <div class="pure-u-3-4">Smoking-Friendly</div>
                  <div class="pure-u-1-4">
                    <input type="checkbox" name="refine-smoking" value="undefined"onclick="$(this).attr('value', this.checked ? 'true' : 'false')">
                  </div>
                </div>
                <div class="pure-g">
                  <div class="pure-u-3-4">Available Now</div>
                  <div class="pure-u-1-4">
                    <input type="checkbox" name="refine-availability" value="undefined" onclick="$(this).attr('value', this.checked ? 'now' : 'false')">
                  </div>
                </div>
              </div>
              <!-- form submit -->
              <button type="submit" id="refineSearchApply" class="pure-button pure-button-red is-full-width is-centered"><span class="fa fa-check"></span> Apply Changes</button>
            </fieldset>
          </form>
        </div>
        <!-- listings -->
        <div class="all-listings" id="listing-result">
        </div>
      </div>
    </div>
  </div>
  <!-- end main content -->
  {{> globalBottomScripts}}
  {{> googleAnalytics}}
  <script src="/js/allListingsVB.js"></script>
</body></html>