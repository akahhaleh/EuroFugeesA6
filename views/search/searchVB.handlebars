<!doctype html>
<html>
<head>
  {{> globalHead}}
</head>
<body id="search">
  <div id="layout">
    {{> globalNavigation}}
    <div id="main">
      <header class="header">
        <h3>Search</h3>
      </header>
      <div class="content">
        <h3 class="center-text">Search for Places to Live</h3>
        <form id="search-form" role="form" method="get" action="/all-listingsVB" class="pure-form pure-form-stacked">
          <fieldset>
            <!-- city -->
            <label><span class="fa fa-map-marker"></span> Destination</label>
            <input type="text" id="search-city" name="city" placeholder="City/Municipality">
            <!-- occupants -->
            <label><span class="fa fa-users"></span> Occupants</label>
            <div class="pure-g">
              <div class="pure-u-3-5">
                <p># of Refugees</p>
              </div>
              <div class="pure-u-2-5">
                <input name="occupants" type="number" min="1" max="19" placeholder="Number" value="1" required>
              </div>
            </div>
            <!-- price limit -->
            <label><span class="fa fa-money"></span> Monthly Rent Limit</label>
            <div class="pure-g">
              <div class="pure-u-2-5 eurofix"><span class="fa fa-euro"></span> In Euros</div>
              <div class="pure-u-3-5">
                <input name="cost" type="number" id="search-cost" min="10" placeholder="Limit">
              </div>
            </div>
            <!-- form submit -->
            <button type="submit" id="submitBtn" class="pure-button pure-button-red is-full-width is-centered"><span class="fa fa-search"></span> Search Now <span class="fa fa-angle-right"></span></button>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
  <!-- end main content -->
  {{> globalBottomScripts}}
  {{> googleAnalytics}}
</body></html>