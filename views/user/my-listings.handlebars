<!doctype html>
<html>
<head>
  {{> globalHead}}
</head>
<body id="search">
  <div id="layout">
    {{> globalNavigation}}
    <div id="main">
      <header class="header">
        <h3>My Listings</h3>
      </header>
      <div class="content">
        <!-- listings -->
        <div class="all-listings" id="listing-result">
          {{#each house}}
          <article class="listing" id="listing">
            <section class="listing-primary-details">
              <header class="content">
                <div class="listing-tag">{{title}}</div>
                <div class="pure-g">
                  <div class="pure-u-2-5">
                    <p class="offerType"><span class="fa fa-home"></span> {{type}}</p>
                  </div>
                  <div class="pure-u-3-5">
                    <p class="offerPrice"><span class="fa fa-euro"></span> {{cost}}/month</p>
                  </div>
                </div>
              </header>
              <a class="house-card listing-slideshow" href="/listing-details" onclick="registerID({{id}})">
                <figure class="show">
                  <img id="image1" src="{{image1}}" width="100%">
                </figure>
                <figure>
                  <img id="image2" src="{{image2}}" width="100%">
                </figure>
                <figure>
                  <img id="image3" src="{{image1}}" width="100%">
                </figure>
              </a>
            </section>
            <section class="listing-secondary-details content">
              <div class="listing-shown">
                <div class="offerDateAvailable">
                  <div class="pure-g">
                    <div class="pure-u-1-2">
                      <p><span class="fa fa-calendar-o"></span> Available:</p>
                    </div>
                    <div class="pure-u-1-2">
                      <p>{{availability}}</p>
                    </div>
                  </div>
                </div>
                <div class="listing-hidden">
                <div class="pure-g">
                  <div class="pure-u-1-2">
                    <p class="placeBed">Bedrooms: {{bed}}</p>
                  </div>
                  <div class="pure-u-1-2">
                    <p class="placeBath">Bathrooms: {{bath}}</p>
                  </div>
                </div>
              </div>
              <!--a href="#" class="pure-button is-full-width">More Details <span class="fa fa-angle-double-down listingSomeDetails"></span></a-->
              <a href="/listing-details" onclick="registerID({{id}})" class="pure-button-primary is-full-width">Go to listing <span class="fa fa-angle-double-right"></span></a>
              </div>
            </section>
          </article>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <!-- end main content -->
  {{> globalBottomScripts}}
  <script src="/js/myListings.js"></script>
</body></html>